{% extends 'admin_layout.jinja2' %}
{% block center %}
    {% if error_message %}
        {% import 'log4all:templates/util/dialogs.jinja2' as dialogs %}
        {% call dialogs.error_dialog('Error',error_message) %}
        {% endcall %}
    {% else %}
        <div class="panel">
            <div class="title">Edit Group</div>
            <div class="contentPanel">
                <form id="updateGroupFrm" method="POST">
                    <input type="hidden" name="original_name" value="{{ group['name'] }}">
                    <input type="hidden" name="operation" value="updateGroup">
                    <input type="hidden" name="csrf" value="{{ csrf }}">

                    <div class="ui form segment">
                        <div class="field">
                            <label>Name</label>
                            <input name="name" type="text" placeholder="Name" value="{{ group['name'] }}">
                        </div>
                        <div class="field">
                            <label>Description</label>
                            <textarea name="description" placeholder="Description">{{ group['description'] }}</textarea>
                        </div>

                        <div class="field">
                            <label>Levels Notifications</label>
                            <select name="notification_levels" multiple="multiple" style="height: 130px;">
                                {% for level in levels %}
                                    <option value="{{ level }}"
                                            {% if level in group['notification_levels'] -%} selected {% endif -%}
                                            >{{ level }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div id="saveGroupBtn" class="ui green submit button">Save</div>
                        <script>
                            $("#saveGroupBtn").click(function () {
                                $('#updateGroupFrm').submit();
                            });
                        </script>
                    </div>
                </form>
            </div>
        </div>
    {% endif %}
{% endblock %}