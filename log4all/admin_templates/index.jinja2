<!DOCTYPE html>
<html ng-app="Log4AllAdmin">
<head>
    <meta charset="UTF-8">
    <title>Log4All Administration</title>
    <script src="{{ 'log4all:bower_components/jquery/dist/jquery.min.js'|static_url }}"></script>
    <script src="{{ 'log4all:bower_components/angular/angular.min.js'|static_url }}"></script>
    <script src="{{ 'log4all:bower_components/angular-route/angular-route.min.js'|static_url }}"></script>
    <script src="{{ 'log4all:bower_components/angular-jwt/dist/angular-jwt.min.js'|static_url }}"></script>
    <script src="{{ 'log4all:bower_components/angular-local-storage/dist/angular-local-storage.min.js'|static_url }}"></script>

    <script src="{{ 'log4all:bower_components/angular-animate/angular-animate.min.js'|static_url }}"></script>

    <script src="{{ 'log4all:bower_components/jquery-ui/jquery-ui.min.js'|static_url }}"></script>
    <link rel="stylesheet" href="{{ 'log4all:bower_components/jquery-ui/themes/smoothness/jquery-ui.min.css'|static_url }}"/>

    <script src="{{ 'log4all:bower_components/semantic-ui/dist/semantic.min.js'|static_url }}"></script>

    <link rel="stylesheet" href="{{ 'log4all:bower_components/angular/angular-csp.css' | static_url }}"/>
    <link rel="stylesheet" href="{{ 'log4all:bower_components/semantic-ui/dist/semantic.min.css' | static_url }}"/>


    <script src="{{ 'log4all:admin_static/js/services/Log4AllService.js' | static_url }}"></script>
    <script src="{{ 'log4all:admin_static/js/services/Log4AllAuthService.js' | static_url }}"></script>
    <script src="{{ 'log4all:admin_static/js/services/Log4AllGroupService.js' | static_url }}"></script>
    <script src="{{ 'log4all:admin_static/js/services/Log4AllApplicationService.js' | static_url }}"></script>
    <script src="{{ 'log4all:admin_static/js/services/Log4AllUserService.js' | static_url }}"></script>

    <script src="{{ 'log4all:admin_static/js/admin_log4all.js' | static_url }}"></script>
    <script src="{{ 'log4all:admin_static/js/controllers/ApplicationController.js' | static_url }}"></script>
    <script src="{{ 'log4all:admin_static/js/controllers/ApplicationsController.js' | static_url }}"></script>
    <script src="{{ 'log4all:admin_static/js/controllers/GroupController.js' | static_url }}"></script>
    <script src="{{ 'log4all:admin_static/js/controllers/GroupsController.js' | static_url }}"></script>
    <script src="{{ 'log4all:admin_static/js/controllers/UsersController.js' | static_url }}"></script>
    <script src="{{ 'log4all:admin_static/js/controllers/UserController.js' | static_url }}"></script>
    <script src="{{ 'log4all:admin_static/js/controllers/LoginController.js' | static_url }}"></script>



    <link rel="stylesheet" href="{{ 'log4all:admin_static/css/style.css' | static_url }}"/>
</head>
<body ng-controller="MainController">

    <div class="ui segment attached inverted">
        <div class="ui grid ">
            <div class="column twelve wide column " style="padding-top: 0px;">
                <h1 class="header item inverted">
                    <i class="ui settings red icon"></i>Log4All Admin
                </h1>
            </div>
            <div class="right aligned four wide column">
                <div class="ui form inverted small" ng-controller="LoginController">
                    <div class="two fields" ng-cloak ng-hide="isLogged()">
                        <div class="field">
                            <label>Username</label>
                            <div class="ui icon input">
                                <input type="text" ng-model="auth.username"/>
                                <i class="user icon"></i>
                              </div>
                        </div>
                        <div class="field">
                            <label>Password</label>
                             <div class="ui icon input">
                                <input type="password" ng-model="auth.password" ng-enter="login()"/>
                                <i class="lock icon"></i>
                              </div>
                        </div>

                    </div>
                    <div class="ui icon small red button" ng-click="logout()" ng-cloak ng-show="isLogged()"><i class="ui sign out icon"></i> Logout</div>
                </div>
            </div>
        </div>
    </div>
    <div ng-show="isLogged()" ng-cloak>
        <div class="ui grid">
            <div class="ui two wide column vertical menu inverted" >
                <a class="item" href="#applications">
                   <i class="ui rocket icon"></i>Applications
                </a>
                <div class="header item">
                    Auth
                </div>
                <a class="item" href="#groups">
                   <i class="ui groups icon"></i>Groups
                </a>
                 <a class="item" href="#users">
                   <i class="ui users icon"></i>Users
                </a>
            </div>
            <div class="ui fourteen wide column" ng-view=""></div>
        </div>
    </div>
    <div ng-cloak ng-hide="isLogged()" class="ui segment center aligned">
        <h2 class="ui header">Login required</h2>
    </div>
</body>
</html>